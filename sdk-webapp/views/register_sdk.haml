.content
  .page_header
    = _ :register_sdk

  %form{:action => "/#{@language}/register_sdk/do_register", :method => 'post'}
    .parameter.parameter_name
      %label
        = _ :username
      %input#text_field1{:type => 'text', :name => 'username', :value => '', :class=> "button parameter_text_field"}
    .clear
    .parameter.parameter_name
      %label
        = _ :password
      %input#text_field2{:type => 'password', :name => 'password', :value => '', :class=> "button parameter_text_field"}
    .clear
      %input{:type => 'submit', :value => (_ :do_register), :class => 'button'}
